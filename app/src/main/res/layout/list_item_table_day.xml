<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_table_day_parent_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listItemTableDayLabel"
        android:layout_width="@dimen/list_item_table_day_label_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/list_item_table_day_label"
        android:textAppearance="@style/Base.TextAppearance.AppCompat" />

    <View
        android:layout_width="@dimen/list_item_table_day_divider_width"
        android:layout_height="@dimen/list_item_table_day_divider_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/list_item_table_day_divider_margin"
        android:background="@android:color/darker_gray" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listItemCourseTableTimeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
</LinearLayout>

