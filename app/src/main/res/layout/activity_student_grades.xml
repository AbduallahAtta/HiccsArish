<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


      <android.support.v7.widget.RecyclerView
        android:id="@+id/StudentGradesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:ignore="MissingConstraints" />

    <TableLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="473dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/usid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/student_login_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primaryColor"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginImage" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/student_login_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primaryColor"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginImage" />


        </TableRow>

    </TableLayout>
    <com.victor.loading.rotate.RotateLoading
        android:id="@+id/loadingIndicator"
        style="@style/loadingIndicatorStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loading_color="@color/primaryColor"
        app:loading_width="@dimen/loading_indicator_border_width" />

</android.support.constraint.ConstraintLayout>
