<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extraCoursesCardView"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:layout_margin="@dimen/list_item_news_parent_margin"
    android:clickable="true"
    android:focusable="true"
    android:stateListAnimator="@animator/left_on_touch"
    app:cardCornerRadius="@dimen/list_item_news_parent_corner_radius"
    app:cardElevation="@dimen/list_item_news_parent_elevation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"

        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"

            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/extra_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/extra_course_des"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/extra_course_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:transitionName="@string/extra_courses_shared_transition_name"
            android:layout_margin="4sp"
            android:layout_gravity="center"
            android:layout_weight="1.5"/>


    </LinearLayout>

</android.support.v7.widget.CardView>